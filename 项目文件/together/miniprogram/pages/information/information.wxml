      </navigator>
    </view>

    <view class="miniProgram" bindtap='jumpToSend'>
      <view class='part_act'>
        <view class='act_content2'>
          <view class='act_img'>
            <image src='../../images/shahangbiaojv.jpg' class='act_image'></image>
          </view>
          <view class='act_name'>沙航镖局</view>
        </view>
      </view>
    </view>
  </view>

</view>

<view class="block4">

  <button class="block4Btn" bindtap='tohome'>
    <image class="block4BtnIcon" src="{{homeIcon}}"></image>
  </button>

  <button class="block4Btn" bindtap='toclass'>
    <image class="block4BtnIcon" src="{{fairIcon}}"></image>
  </button>

  <button class="block4Btn">
    <image class="block4BtnIcon" src="{{meIcon}}"></image>
