          </view>
        </view>
      </navigator>
    </view>

    <view class="miniProgram">
      <navigator target="miniProgram" open-type="navigate" app-id="wxf68a40a9f57c8f3f" version="release">
        <view class='part_act'>
          <view class='act_content2'>
            <view class='act_img'>
              <image src='../../images/buaayuan.jpg' class='act_image'></image>
            </view>
            <view class='act_name'>北航小程序</view>
          </view>
        </view>
      </navigator>
    </view>

    <view class="miniProgram">
      <navigator target="miniProgram" open-type="navigate" app-id="wx78adad8a552d0009" version="release">
        <view class='part_act'>
          <view class='act_content2'>
            <view class='act_img'>
              <image src='../../images/maotu.jpg' class='act_image'></image>
            </view>
            <view class='act_name'>猫途校园</view>
          </view>
