<view class="block1">

  <view class="head">
    <open-data style="border-radius:80rpx;overflow:hidden;display:block;height:160rpx;width:160rpx" type="userAvatarUrl"></open-data>
  </view>

  <view class="nickname">
    <open-data type="userNickName"></open-data>
  </view>

  <button class="settings" bindtap="jumpToSettings">
    <image class="settingsIcon" src="{{settingsIcon}}"></image>
  </button>

  <view class="settingsView" wx:if="{{openSettings}}">

    <button class="closeSettings" bindtap="jumpToSettings">
      <image class="closeSettingsIcon" src="{{closeSettingsIcon}}"></image>
    </button>

    <view class="settingsBtnBar">


      <view class='settingsBtn' bindtap="changeAddress">
        <text class="settingsBtnText">信息设置</text>
      </view>

      <view class='settingsBtn' bindtap='toquestion'>
        <text class="settingsBtnText">常见问题</text>
      </view>

      <view class='settingsBtn' bindtap='toabout'>
        <text class="settingsBtnText">关于我们</text>
      </view>
    </view>

  </view>

  <button class="myFavorites" bindtap="jumpToFavorites">
    <text class="buttonText">收藏夹</text>
  </button>
  <button class="myStore" bindtap="jumpToStore">
    <text class="buttonText">我的店铺</text>
  </button>

</view>

<view class="block3">

