  width: 100%;
  position: fixed;
  background-color: white;
  margin-top: 70rpx;
}
.sort_li{
  height: 65rpx;
  width: 90%;
  padding-top: 15rpx;
  margin-left: 5%;
  color: rgb(65, 65, 65);
  font-size: 30rpx;
  border-bottom: 1rpx solid rgba(100, 100, 102, 0.322);
}
#sort_li_1{
  color: rgb(255, 60, 0);
}
#type{
  width: 110rpx;
  padding-top: 12rpx;
  margin-left: 70rpx;
  float: left; 
  font-size: 27rpx;
  text-align: center;
  color: rgb(65, 65, 65);
}
#type_yes{
  float: right;
}
#type_hide{
  width: 100%;
  position: fixed;
  background-color: white;
  margin-top: 70rpx;
}
.type_li{
  height: 65rpx;
  width: 90%;
  padding-top: 15rpx;
  margin-left: 5%;
  color: rgb(65, 65, 65);
  font-size: 30rpx;
  border-bottom: 1rpx solid rgba(100, 100, 102, 0.322);
}
#array{
  height: 55rpx;
  width: 55rpx;
  margin-top: 7rpx;
  margin-left: 100rpx;
  float: left;
}

#content{
  margin-top: 150rpx;
  z-index: -1;
}

.allgoods{
  width: 100%;
  margin-top: 0rpx;
  margin-bottom: 40rpx;
}
.kongbai{
  width: 100%;
  height: auto;
  font-size: 40rpx;
  margin-top: 30rpx;
  color: gray;
  text-align: center;
}
.goods{
  height: 250rpx;
  width: 100%;
  margin-bottom: 10rpx;
  margin-top: 10rpx;
  padding-top: 10rpx;
  border-radius: 20rpx;
  background-color: white;
}
.goods2{
  height: 280rpx;
  width: 310rpx;
  margin-left: 50rpx;
  margin-top: 30rpx;
  float: left;
}
.goods_img{
  height: 235rpx;
  width: 235rpx;
  margin-top: 5rpx;
  margin-left: 60rpx;
  border-radius: 20rpx;
  float: left;
}
.goods_img2{
  height: 280rpx;
  width: 310rpx;
  overflow: hidden;
  border-radius: 20rpx;
  box-shadow: 0 0 8rpx rgba(0, 0, 0, 0.14), 0 8rpx 16rpx rgba(0, 0, 0, 0.28);
}
.goods_des{
  height: 240rpx;
  width: 440rpx;
  margin-top: 5rpx;
