/* pages/test/test.wxss */
page {
  background-color: #f7f2f2;
}
#title{
  width: 100%;
  height: 80rpx;
  position: fixed;
  top: -5rpx;
  background-color: #3f72af;
}
#my_search{
  width: 100%;
  height: 100%;
  background-color: #3f72af;
  float: left;
}
#my_form{
  height: 100%;
}
.img_wxss{
  width: 100%;
  height: 100%;
}

#function{
  height: 70rpx;
  width: 100%;
  position: fixed;
  top: 75rpx;
  background: white;
}
#sort{
  width: 150rpx;
  padding-top: 12rpx;
  margin-left: 60rpx;
  float: left;
  font-size: 27rpx;
  color: rgb(65, 65, 65);
}
#sort_i{
  float: right;
  margin-right: 15rpx;
  margin-top: 5rpx;
}
