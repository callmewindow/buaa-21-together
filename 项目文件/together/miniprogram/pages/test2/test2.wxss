  font-size: 25rpx;
  color: gray;
}
.des_position{
  height: 45rpx;
  margin-left: 25rpx;
  margin-top: 69rpx;
  float: left;
  font-size: 27rpx;
  color: gray;
}
.enter{
  height: 30rpx;
  margin-left: 15rpx;
  margin-top: 125rpx;
  font-size: 20rpx;
  color: black;
}
